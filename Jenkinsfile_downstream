def color_map = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def emoji_map = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def slackStartMessage = """
Info: Starting buld
Job: *${env.BUILD_URL}*
User: *${getBuildUser()}*
"""

def slackEndMessage = """
Info: Ended build
Status: *${currentBuild.currentResult}*
Job: *${env.BUILD_URL}*
User: *${getBuildUser()}*
"""

def slackChannel = 's_test'

def checkSlackChannel() {
    if (params.messageThread) {
        slackChannel = params.messageThread
    }
}

def getBuildUser() {
    if (currentBuild.rawBuild.getCause(Cause.UserIdCause)) {
        return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
    } else {
        for (cause in currentBuild.rawBuild.getCause(Cause.UpstreamCause).getUpstreamCauses()) {
            try {
                return cause.getUserId() + " caused from upstream"
            } catch(Exception e) {
                return "Scheduler"
            }
        }
    }
}


pipeline{
    agent any

    stages{
        stage('Send slack notification') {
            steps {
                script {
                    checkSlackChannle();
                    slackNotify = slackSend(channel: slackChannel, message: slackStartMessage)
                    slackChannel = slackNotify.threadId
                    timestamp = slackNotify.ts
                }
            }
        }

        stage('Print user info'){
            steps{
                script{
                    echo "${getBuildUser()}"
                    echo "${timestamp}"
                }
            }
        }

        stage('Done downsream'){
            steps{
                script{
                    echo "Done downstream"
                }
            }
        }
    }
    
    post {
        always {
            script {
                slackSend(channel: slackChannel, message: slackEndMessage, timestamp: timestamp, color: color_map[currentBuild.currentResult])
                slackNotify.addReaction(emoji_map[currentBuild.currentResult])
            }
        }
    }
}
