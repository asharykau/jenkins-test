def color_map = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def emoji_map = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def slackMessage = """
Info: this is downstream
Job: *${currentBuild.currentResult}*
User: *${getBuildUser()}*
4......
"""

def getSlackChannel() {
    if (params.messageTtread) {
        return params.messageTtread
    }
    return 's_test'
}

def getBuildUser() {
    if (currentBuild.rawBuild.getCause(Cause.UserIdCause)) {
        return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
    } else {
        for (cause in currentBuild.rawBuild.getCause(Cause.UpstreamCause).getUpstreamCauses()) {
            try {
                return cause.getUserId() + " caused from upstream"
            } catch(Exception e) {
                return "Scheduler"
            }
        }
    }
}


pipeline{
    agent any

    stages{
        stage('Send slack notification') {
            steps {
                script {
                    slackNotify = slackSend(channel: getSlackChannel(), message: "Start Build")
                }
            }
        }

        stage('Print user info'){
            steps{
                script{
                    echo "${getBuildUser()}"
                    echo "${getSlackMessage()}"
                }
            }
        }

        stage('Done downsream'){
            steps{
                script{
                    echo "Done downstream"
                }
            }
        }
    }
    
    post {
        always {
            script {
                slackSend(channel: getSlackChannel(), message: slackMessage, timestamp: slackNotify.ts, ccolor: color_map[currentBuild.currentResult])
                slackNotify.addReaction(emoji_map[currentBuild.currentResult])
            }
        }
    }
}
