def color_map = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def emoji_map = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def slackStartMessage = """
Info: Start notifications test on Jenkins
${env.BUILD_URL}${getBuildUser()}
"""

def slackEndMessage = """
Info: Ended build
Status: *${currentBuild.currentResult}*
${env.BUILD_URL}${getBuildUser()}
"""

def slackChannel = 's_test'

def checkSlackChannel() {
    if (params.messageThread != null) {
        slackChannel = params.messageThread
    }
}

def getBuildUser() {
    try {
        return "\nUser: *${currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()}*"
    } catch(Exception e) {
        return ""
    }
}


pipeline{
    agent any

    stages{
        stage('Send slack notification') {
            steps {
                script {
                    checkSlackChannel()
                    slackNotify = slackSend(channel: slackChannel, message: slackStartMessage)
                    slackChannel = slackNotify.threadId
                    timestamp = slackNotify.ts
                }
            }
        }
        
        stage('Run Downstream'){
            steps{
                script{
                    sleep 3
                    echo "${getBuildUser()}"
                    build job: "Setrix/Production/test/downstream", parameters: [
                        string(name: 'messageThread', value: slackChannel)]

                }
            }
        }

        stage('Done upstream'){
            steps{
                script{
                    echo "Done upstream"
                }
            }
        }
    }

    post {
        always {
            script {
                slackSend(channel: slackChannel, message: slackEndMessage, timestamp: timestamp, color: color_map[currentBuild.currentResult])
                slackNotify.addReaction(emoji_map[currentBuild.currentResult])
            }
        }
    }
}
