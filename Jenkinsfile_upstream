def color_map = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def emoji_map = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def slackMessage = """
Info: test slack message on Jenkins
Job: *${currentBuild.currentResult}*
User: *${getBuildUser()}*
4......
"""

def getSlackChannel() {
    if (params.myTtread) {
        return params.messageTtread
    }
    return 's_test'
}

def getBuildUser() {
    if (currentBuild.rawBuild.getCause(Cause.UserIdCause)) {
        return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
    } else {
        return false
    }
}


pipeline{
    agent any

    stages{
        
        stage('Send slack notification') {
            steps {
                script {
                    slackNotify = slackSend(channel: getSlackChannel(), message: "Start Build")
                }
            }
        }
        
        stage('Run Downstream'){
            steps{
                script{
                    echo "${getBuildUser()}"
                    build job: "Setrix/Production/test/downstream", parameters: [
                        string(name: 'messageTread', value: slackNotify.threadId)]

                }
            }
        }

        stage('Done upstream'){
            steps{
                script{
                    echo "Done upstream"
                }
            }
        }
    }

    post {
        always {
            script {
                slackSend(channel: getSlackChannel(), message: slackMessage, timestamp: slackNotify.ts, color: color_map[currentBuild.currentResult])
                slackNotify.addReaction(emoji_map[currentBuild.currentResult])
            }
        }
    }
}
