def COLOR_MAP = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def EMOJI_MAP = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def SLACK_CHANNEL = 's_test'

def getBuildUser() {
    if (currentBuild.rawBuild.getCause(Cause.UserIdCause)) {
        return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
    } else {
        return false
    }
}

pipeline{
    agent any

    stages{
        
        stage('Send slack notification') {
            steps {
                script {
                    slackNotify = slackSend(channel: "${SLACK_CHANNEL}", message: "Start Build")
                    message_tread = slackNotify.threadId
                    timestamp = slackNotify.ts
                }
            }
        }
        
        stage('Run Downstream'){
            steps{
                script{
                    echo "${getBuildUser()}"
                    build job: "Setrix/Production/test/downstream", parameters: [
                        string(name: 'MESSASGE_TREAD', value: "${message_tread}")]

                }
            }
        }

        stage('Done upstream'){
            steps{
                script{
                    echo "Done upstream"
                }
            }
        }
    }
}
