def color_map = [
    'SUCCESS': 'good',
    'FAILURE': 'danger',
    'ABORTED': 'warning',
]

def emoji_map = [
    'SUCCESS': 'white_check_mark',
    'FAILURE': 'x',
    'ABORTED': 'heavy_multiplication_x',
]

def slackMessage = """
Info: test slack message on Jenkins
Job: *${currentBuild.currentResult}*
User: *${getBuildUser()}*
4......
"""

def slackChannel = 's_test"

def checkSlackChannel() {
    if (params.messageThread) {
        slackChannel = params.messageThread
    }
}

def getBuildUser() {
    if (currentBuild.rawBuild.getCause(Cause.UserIdCause)) {
        return currentBuild.rawBuild.getCause(Cause.UserIdCause).getUserId()
    } else {
        return false
    }
}


pipeline{
    agent any

    stages{
        
        stage('Send slack notification') {
            steps {
                script {
                    checkSlackChannel()
                    slackNotify = slackSend(channel: slackChannel, message: slackMessage)
                    slackChannel = slackNotify.threadId
                    timestamp = slackNotify.ts
                }
            }
        }
        
        stage('Run Downstream'){
            steps{
                script{
                    echo "${getBuildUser()}"
                    build job: "Setrix/Production/test/downstream", parameters: [
                        string(name: 'messageTread', value: slackChannel)]

                }
            }
        }

        stage('Done upstream'){
            steps{
                script{
                    echo "Done upstream"
                }
            }
        }
    }

    post {
        always {
            script {
                slackSend(channel: slackChannel, message: slackMessage, timestamp: timestamp, color: color_map[currentBuild.currentResult])
                slackNotify.addReaction(emoji_map[currentBuild.currentResult])
            }
        }
    }
}
